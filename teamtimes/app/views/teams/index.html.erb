

<h1>Listing Teams</h1>

<% if @teams.any? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teamemail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td class="display">
        <%= link_to edit_team_path(team) do%>
          <%= team.name %>
        <%end%>
        </td>
          <%= link_to edit_team_path(team) do%>
            <td class="display"><%= team.teamemail %></td>
          <%end%>
        <td><%= link_to 'X', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <%else %>
    <p>There are no teams here <br> Use the new teams button to add teams</p>
  <% end %>
  </tbody>
</table>


<br>
<%= link_to 'New Team', new_team_path %>
<br><br>
